(add-to-list 'load-path "D:\\tools\\Editor\\emacs\\config\\elisp\\emacs\\cscope\\cscope-15.7-win")
(require 'xcscope)

;;Muse load-path
(add-to-list 'load-path "D:\\tools\\Editor\\emacs\\config\\elisp\\emacs\\muse-latest")
(require 'muse-color)  
(require 'muse-mode)
(require 'muse-html)
